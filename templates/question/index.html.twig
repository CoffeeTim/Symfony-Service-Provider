{% extends 'baseAdmin.html.twig' %}


{% block content %}
<div class="content-wrapper">
<div class="card">
                <div class="card-header">
                    <h3 class="card-title"><b>Espace Questions&nbsp;&nbsp;</b></h3>
                    <a class="btn btn-info btn-sm" href={{path("new_question")}} style="width: 200px">
                    <i class="fas fa-plus-circle">
                    </i>
                    Ajouter une question</a>
                    <input type="text" id="search" class="form-control" placeholder="Search">
                    <a class="btn btn-info btn-sm" href={{path("export_questions")}} style="width: 200px">
                    <i class="fas fa-plus-circle">
                    </i>
                    Exporter les questions</a>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>

                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                               Enoncé de la question
                            </th>
                            <th style="width: 30%">
                                Réponse A
                            </th>
                            <th>
                                Réponse B
                            </th>
                            <th style="width: 8%" class="text-center">
                               La Réponse Correcte
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {%for question in questions%}
                        <tr>
                            <td>
                                {{question.getId()}}
                            </td>
                            <td>
                            {{question.getEnonce()}}
                            </td>
                            <td>
                               {{question.getPropositionA()}}

                            </td>
                            <td>
                                  {{question.getPropositionB()}}

                            </td>
                            <td class="project-state">
                                
                            {{question.getPropositionCorrecte()}}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="{{path("edit_question",{id:question.getId()})}}" style="width: 120px">
                                    <i class="fas fa-pencil-alt"></i>
                                    modifier
                                </a>
                                <form action="{{path("delete_question",{id:question.getId()})}}" method="delete">
                                <button onclick="return confirm('Voulez cous vraiment supprimer cette Question ?');" class="btn btn-danger btn-sm" style="width: 120px">
                                <i class="fas fa-trash-alt"></i>
                                supprimer</button>
                                </form>

                            </td>
                        </tr>
                        {%endfor%}
                       
                       
                        </tbody>
                    </table>
                </div>
      </div>
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
    <script>
        $( document ).ready(function() {
            $("#search").keyup(function(e){
                var value = $(this).val();
                $.ajax({
                    url : "{{ path('questions') }}",
                    type : 'GET',
                    data: {
                        'searchValue' : value
                    },
                    success : function(retour){
                        if(retour){
                            $('#t tbody#search').empty();
                            $.each(JSON.parse(retour), function(i, obj) {
                                $('#t tbody#all').hide();
                                $('#t tbody#search').append('<tr><td> '+obj.id+'  </td><td>    'obj.enonce'  </td><td>'obj.proposition_A' </td><td>'obj.proposition_B' </td><td>'obj.proposition_correcte' </td>;
                            });
                        }
                        else
                        {
                            $('#t tbody#all').show();
                            $('#t tbody#search').empty();
                            $('#t tbody#search').fadeIn('fast');
                        }
                    },
                });
                return false;
            });
        });
    </script>
{% endblock %}
