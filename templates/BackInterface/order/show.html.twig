{% extends 'baseAdmin.html.twig' %}

{% block title %}Order{% endblock %}

{% block content %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ order.message }}</td>
            </tr>
            <tr>
                <th>CreatAt</th>
                <td>{{ order.creatAt ? order.creatAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index_back') }}">back to list</a>

    {{ include('BackInterface/order/_delete_form.html.twig') }}
{% endblock %}
