{% extends 'baseAdmin.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block content %}
<div class="content-wrapper">
    <h1>Competence Table</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Verification</th>
                <th>IdQuiz</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.titre }}</td>
                <td>{{ competence.categorie }}</td>
                <td>{{ competence.verification ? 'Yes' : 'No' }}</td>
                <td>{{ competence.idQuiz }}</td>
                <td>
                    <a href="{{ path('competence_show', {'id': competence.id}) }}">show</a>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competence_new') }}">Create new</a>
</div>
{% endblock %}
