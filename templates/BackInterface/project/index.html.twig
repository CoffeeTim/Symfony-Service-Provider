{% extends 'baseAdmin.html.twig' %}

{% block title %}Project index{% endblock %}

{% block content %}
    <div class="content-wrapper" style="min-height: 1593.75px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Forum</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">



                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h3 class="card-title">Projects :</h3>

                                                    <div class="card-tools">
                                                        <div class="input-group input-group-sm" style="width: 150px;">
                                                            <input  type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-default">
                                                                    <i class="fas fa-search"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- /.card-header -->
                                                <div class="card-body table-responsive p-0" style="height: 400px;">

                                                    <table class="table" id="tableac">
                                                        <input type="text" id="search" name="search" class="form-control" placeholder="Search by Marque">
                                                        <thead>
                                                        <tr>
                                                            <th>Id</th>
                                                            <th>Title</th>
                                                            <th>Description</th>
                                                            <th>CreatAt</th>
                                                            <th>Status</th>
                                                            <th>actions</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for project in projects %}
                                                            <tr>
                                                                <td>{{ project.id }}</td>
                                                                <td>{{ project.title }}</td>
                                                                <td>{{ project.description }}</td>
                                                                <td>{{ project.creatAt ? project.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                                                                <td>{{ project.status ? 'Yes' : 'No' }}</td>
                                                                <td>
                                                                    <a href="{{ path('project_show_back', {'id': project.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>

                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td colspan="6">no records found</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!-- /.card-body -->
                                                <div id="div_chart"></div>

                                                <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                                                <script type="text/javascript">
                                                    {{ gc_draw(piechart, 'div_chart') }}
                                                </script>
                                            </div>
                                            <!-- /.card -->
                                        </div>
                                    </div>


                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->





                            <!-- this row will not appear when printing -->

                            <div class="row no-print">
                                <div class="col-12">

                                </div>
                            </div>
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#search').keyup(function(){
                search_table($(this).val());
            });
            function search_table(value){
                $('#tableac tbody tr').each(function(){
                    var found = 'false';
                    $(this).each(function(){
                        if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                        {
                            found = 'true';
                        }
                    });
                    if(found === 'true')
                    {
                        $(this).show();

                    }
                    else
                    {
                        $(this).hide();

                    }
                });
            }
        });
    </script>

{% endblock %}
