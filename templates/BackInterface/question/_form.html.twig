{{ form_start(form) }}

<div class="card-body">
    <div class="form-group">
        <label >Statement * :</label>
        {{ form_widget(form.statement,{'attr':{'class':'form-control' , 'id':'inputName'}}) }}
        <div style="color :red;" >
            {{form_errors(form.statement)}}
        </div>
    </div>
    <div class="form-group">
        <label >Answer A * :</label>
        {{ form_widget(form.answerA,{'attr':{'class':'form-control' , 'id':'inputAnswerA'}}) }}
        <div style="color :red;" >
            {{form_errors(form.answerA)}}
        </div>
    </div>
    <div class="form-group">
        <label >Answer B * :</label>
        {{ form_widget(form.answerB,{'attr':{'class':'form-control' , 'id':'inputAnswerB'}}) }}
        <div style="color :red;" >
            {{form_errors(form.answerB)}}
        </div>
    </div>
    <div class="form-group">
        <label >Answer C * :</label>
        {{ form_widget(form.answerC,{'attr':{'class':'form-control' , 'id':'inputAnswerc'}}) }}
        <div style="color :red;" >
            {{form_errors(form.answerC)}}
        </div>
    </div>
    <div class="form-group">
        <label >Right Answer  * :</label>
        {{ form_widget(form.rightAnswer,{'attr':{'class':'form-control' , 'id':'inputRightAnswer'}}) }}
        <div style="color :red;" >
            {{form_errors(form.rightAnswer)}}
        </div>
    </div>
    <div class="form-group">
        <label for="inputQuiz">Quiz :</label>
        {{ form_widget(form.quiz,{'attr':{'class':'form-control custom-select' , 'id':'inputQuiz'}}) }}
    </div>
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>

</div>
{{ form_end(form) }}
