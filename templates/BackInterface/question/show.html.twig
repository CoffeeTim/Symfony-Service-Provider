{% extends 'baseAdmin.html.twig' %}

{% block title %}Question{% endblock %}

{% block content %}

<div class="content-wrapper" style="min-height: 1593.75px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Forum</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">



                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">

                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-header">
                                                <h3 class="card-title">Show Question :</h3>

                                                <div class="card-tools">
                                                    <div class="input-group input-group-sm" style="width: 150px;">
                                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-default">
                                                                <i class="fas fa-search"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->
                                            <div class="card-body table-responsive p-0" style="height: 400px;">


                                                <table class="table">
                                                    <tbody>
                                                        <tr>
                                                            <th>Id</th>
                                                            <td>{{ question.id }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Statement</th>
                                                            <td>{{ question.statement }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>AnswerA</th>
                                                            <td>{{ question.answerA }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>AnswerB</th>
                                                            <td>{{ question.answerB }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>AnswerC</th>
                                                            <td>{{ question.answerC }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>RightAnswer</th>
                                                            <td>{{ question.rightAnswer }}</td>
                                                        </tr>
                                                    </tbody>
                                                </table>



                                                <a href="{{ path('question_edit_back', {'id': question.id}) }}" class="btn btn-success">edit</a>

                                                {{ include('BackInterface/question/_delete_form.html.twig') }}
                                            </div>
                                            <!-- /.card-body -->
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                </div>


                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row no-print">
                            <div class="col-12">
                                <a href="{{ path('question_index_back') }}" class="btn btn-success float-right"> back to list</a>
                            </div>
                        </div>


                        <!-- this row will not appear when printing -->

                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
{% endblock %}
