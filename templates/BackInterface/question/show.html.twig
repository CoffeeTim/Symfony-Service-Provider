{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Statement</th>
                <td>{{ question.statement }}</td>
            </tr>
            <tr>
                <th>AnswerA</th>
                <td>{{ question.answerA }}</td>
            </tr>
            <tr>
                <th>AnswerB</th>
                <td>{{ question.answerB }}</td>
            </tr>
            <tr>
                <th>AnswerC</th>
                <td>{{ question.answerC }}</td>
            </tr>
            <tr>
                <th>RightAnswer</th>
                <td>{{ question.rightAnswer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

