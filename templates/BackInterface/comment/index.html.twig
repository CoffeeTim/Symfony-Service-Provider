{% extends 'baseAdmin.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block content %}

    <div class="content-wrapper" style="min-height: 1593.75px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Comment</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">

                        <div class="card-body">
                            <div class="tab-content">

                                <!-- /.tab-pane -->
                                {% for comment in comments %}
                                <div class="tab-pane active" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->

                                        <div class="time-label">
                        <span class="bg-success">
                          {{ comment.creatAt ? comment.creatAt|date('D M j') : '' }}
                        </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->

                                        <div>
                                            <i class="fas fa-user bg-info"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>{{ comment.creatAt ? comment.creatAt|date('g:i a') : '' }}</span>

                                                <h3 class="timeline-header"><a href="#">{{ comment.id }}</a> sent a comment</h3>

                                                <div class="timeline-body">
                                                    {{ comment.content }}
                                                </div>



                                                <div class="timeline-footer">
                                                    <a href="{{ path('comment_show', {'id': comment.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                                    {{ include('comment/_delete_form.html.twig') }}
                                                    <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                                </div>
                                                <span class="float-right">
                                                <a href="#" class="link-black text-sm"><i class="far fa-thumbs-up mr-1"></i> Like({{ comment.likes }})</a>
                                                </span>
                                            </div>
                                            </div>


                                    </div>
                                    {% else %}
                                    <p colspan="5">no records found</p>
                                    {% endfor %}

                                </div>
                                <!-- END timeline item -->


                            </div>
                            <!-- /.tab-content -->
                            <div class="row no-print">
                                <div class="col-12">
                                    <a href="{{ path('comment_new') }}" class="btn btn-success float-right"> Create new</a>
                                </div>
                        </div><!-- /.card-body -->

                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->



                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>




{% endblock %}
