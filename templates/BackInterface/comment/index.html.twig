{% extends 'baseAdmin.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block content %}

    <div class="content-wrapper" style="min-height: 1593.75px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h3 class="card-title">Comments :</h3>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Comment</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">

                        <div class="card-body">
                            <div class="tab-content">



                                <!-- /.tab-pane -->
                                {% for comment in comments %}

                                <div class="card">
                                    <div class="card-header">
                                        This message created by <span style="font-size: 15px; color: #00b44e;">{{ comment.usr.username }}</span>
                                    </div>
                                    <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                            <div class="time-label">
                                             <span style="color: #0a0c30;">
                                                 {{ comment.creatAt ? comment.creatAt|date('D M j') : '' }} <span style="font-size: 12px; margin-left: 80%;"> {% include 'FrontInterface/comment/FormaDateTime.html.twig' with {'value' : comment.creatAt } %}</span>
                                                  </span>
                                            </div>
                                            <p>{{ comment.content | raw }}</p>

                                            <footer > <a href="{{ path('comment_show_back', {'id': comment.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                                {{ include('BackInterface/comment/_delete_form.html.twig') }}
                                            </footer>
                                        </blockquote>
                                    </div>
                                </div>

                                <div class="tab-pane active" id="timeline">
                                    <!-- The timeline -->
                                    {% else %}
                                    <p colspan="5">no records found</p>
                                    {% endfor %}

                                </div>
                                <!-- END timeline item -->


                            </div>
                            <!-- /.tab-content -->


                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->



                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>




{% endblock %}
