{% extends 'baseAdmin.html.twig' %}

{% block title %}Forum{% endblock %}

{% block content %}


    <div class="content-wrapper" style="min-height: 1593.75px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Forum</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">



                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h3 class="card-title">Show Forum :</h3>

                                                    <div class="card-tools">
                                                        <div class="input-group input-group-sm" style="width: 150px;">
                                                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-default">
                                                                    <i class="fas fa-search"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- /.card-header -->
                                                <div class="card-body table-responsive p-0" style="height: 400px;">


                                                    <table class="table">
                                                        <tbody>
                                                        <tr>
                                                            <th>Id</th>
                                                            <td>{{ forum.id }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Title</th>
                                                            <td>{{ forum.title }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Description</th>
                                                            <td>{{ forum.description }}</td>
                                                        </tr>
                                                        </tbody>
                                                    </table>

                                                    <a href="{{ path('forum_edit', {'id': forum.id}) }}" class="btn btn-success">edit</a>

                                                    {{ include('forum/_delete_form.html.twig') }}

                                                    <a href="{{ path('forum_index') }}">Go Back</a>
                                                </div>
                                                <!-- /.card-body -->
                                            </div>
                                            <!-- /.card -->
                                        </div>
                                    </div>


                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->


                            <!-- this row will not appear when printing -->

                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

{% endblock %}
