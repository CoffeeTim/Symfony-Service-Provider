{% extends 'baseAdmin.html.twig' %}

{% block title %}Forum{% endblock %}

{% block content %}

    <div class="content-wrapper" style="min-height: 1593.75px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Forum</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">



                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h3 class="card-title">Forums :</h3>

                                                    <div class="card-tools">
                                                        <div class="input-group input-group-sm" style="width: 150px;">
                                                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-default">
                                                                    <i class="fas fa-search"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- /.card-header -->
                                                <div class="card-body table-responsive p-0" style="height: 400px;">

                                                    <table class="table">

                                                        <thead>
                                                        <tr>
                                                            <th>Id</th>
                                                            <th>Title</th>
                                                            <th>Description</th>
                                                            <th>actions</th>
                                                        </tr>
                                                        </thead>

                                                        <tbody>
                                                        {% for forum in forums %}
                                                            <tr>
                                                                <td>{{ forum.id }}</td>
                                                                <td>{{ forum.title }}</td>
                                                                <td>{{ forum.description }}</td>
                                                                <td>
                                                                    <div class="btn-group btn-group-sm">
                                                                        <a href="{{ path('forum_show_back', {'id': forum.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                                                        <a class="btn btn-info btn-sm" href="{{ path('forum_edit_Back', {'id': forum.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                                                                        {{ include('BackInterface/forum/_delete_form.html.twig') }}
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td colspan="4">no records found</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!-- /.card-body -->
                                            </div>
                                            <!-- /.card -->
                                            {% include'BackInterface/admin_dashboard/pagination.html.twig' with {'route' : 'forum_index_back'} %}
                                        </div>
                                    </div>


                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->





                            <!-- this row will not appear when printing -->

                            <div class="row no-print">
                                <div class="col-12">
                                    <a href="{{ path('forum_new_back') }} " class="btn btn-success float-right"> Create new</a>
                                </div>
                            </div>
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

{% endblock %}
