        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    {#                    <th style="width: 5%">#}
                    {#                        ##}
                    {#                    </th>#}
                    <th style="width: 100%">
                        Catégorie

                    </th>
                    <th>
                        Difficulté
                    </th>
                    <th>
                        Note Maximale
                    </th>

                    <th style="width: 20%">
                    </th>
                </tr>
                </thead>
                <tbody>
                {%for quiz in quizes%}
                    <tr>
                        {#                        <td>#}
                        {#                            {{categorie.getId()}}#}
                        {#                        </td>#}
                        <td>
                            {{quiz.getCategorie()}}
