{% extends 'baseAdmin.html.twig' %}


{% block content %}

<div class="content-wrapper">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><b>Espace Quizes&nbsp;&nbsp;</b></h3>
            <a class="btn btn-info btn-sm" href={{path("new_quiz")}} style="width: 200px">
