{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block content %}

    <section class="wrapper">
        <div class="search-sec">
            <div class="container">
                <div class="search-box">
                    <form method="post" action="{{ path('recherche') }}">
                        <input type="text" name="search" placeholder="Search keywords">
                        <button type="submit" value="Recherche">Search</button>
                    </form>
                </div><!--search-box end-->
            </div>
        </div><!--search-sec end-->



        <div class="container-fostrap">



            <div class="content">
                <div class="container">
                    <div class="row">
                        {% for service in services %}
                            <div class="col-xs-12 col-sm-4">

                                <div class="card">
                                    <a class="img-card" href="{{ path('service_show_front', {'id': service.id}) }}">
                                        <img src="{{ asset('images/' ~ service.image) }}" alt="" style="width: 200px; height: 200px" >
                                    </a>
                                    <div class="card-content">

                                        <h4 class="card-title">
                                            <a href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">{{ service.title }}
                                            </a>
                                        </h4>
                                        <p class="">
                                            {{ service.description }}
                                        </p>
                                    </div>
                                    <div class="card-read-more">
                                        <a href="{{ path('service_show_front', {'id': service.id}) }}" class="btn btn-link btn-block">
                                            {{ service.price }} DT
                                        </a>
                                    </div>
                                    <div class="card-read-more">
                                        <a href="{{ path('service_show_front', {'id': service.id}) }}" class="btn btn-link btn-block">
                                            {{ service.creatAt ? service.creatAt|date('Y-m-d ') : '' }}
                                        </a>
                                    </div>
                                </div>

                            </div>
                        {% endfor %}


                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="save-stngs">
        <ul>
            <li><button type="submit" ><a href="{{ path('service_new_front') }}">Create new</a></button></li>
        </ul>
    </div><!--save-stngs end-->




        <div class="pagination " >
            <ul class="pagination pagination-sm" text-align: center;>{{ knp_pagination_render(services) }}</ul>
        </div>



{% endblock %}