{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block content %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ service.price }}</td>
            </tr>
            <tr>
                <th>CreatAt</th>
                <td>{{ service.creatAt ? service.creatAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ service.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('service_index_front') }}">back to list</a>

    <a href="{{ path('service_edit_front', {'id': service.id}) }}">edit</a>

    {{ include('FrontInterface/service/_delete_form.html.twig') }}
{% endblock %}
