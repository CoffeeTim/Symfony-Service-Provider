{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
<div class="card-body">
    <div class="form-group">

        <label style=" color: #6a737c;">Title * :</label>
        <br>
        <br>

        {{ form_widget(form.title,{'attr':{'class':'form-control' , 'id':'inputName'}}) }}
        <div style="color :red;" >
            {{form_errors(form.title)}}
        </div>
    </div>
    <div class="form-group">
        <label style=" color: #6a737c;">Description * :</label>
        <br>
        <br>

        {{ form_widget(form.description,{'attr':{'class':'form-control' , 'id':'inputDescription'}}) }}
        <div style="color :red;" >
            {{form_errors(form.description)}}
        </div>
    </div>

    {{ form_widget(form.us,{'attr':{'style':'display:none'}}) }}
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>

</div>

{{ form_end(form) }}