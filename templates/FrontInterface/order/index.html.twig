{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>CreatAt</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.message }}</td>
                <td>{{ order.creatAt ? order.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('order_show_front', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit_front', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new_front') }}">Create new</a>
{% endblock %}
