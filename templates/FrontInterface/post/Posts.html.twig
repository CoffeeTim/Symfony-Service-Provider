{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}
{% block content %}
    <!-- summernote -->
    <style xmlns="http://www.w3.org/1999/html">
        .sticky {
            position: fixed;
            top: 10px;
            width: 27%;
            padding-right: 0px;
            padding-left: 0px;
        }
    </style>

    <section class="forum-page">
        <div class="container">
            <div class="forum-questions-sec">
                <div class="row">
                    <div class="col-lg-8">
                        {% if post.comments | length > 0 %}
                            <div class="alert alert-info">
                                <h4 class="alert-heading text-center">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            Overall rating given by our clients<br>
                                            <small>this rating is calculated on {{ post.comments | length }}
                                                comments!</small>
                                        </div>
                                        <div class="col">
                                            {{ post.avgRating | round(1,'floor') }}<br>
                                            {% include 'FrontInterface/post/rating.html.twig' with {'rating': post.avgRating |round(1,'floor') } %}
                                        </div>
                                    </div>
                                </h4>
                            </div>
                        {% endif %}
                        <div class="forum-post-view" style="border-radius: 5px;">
                            <div class="usr-question">

                                <div class="usr_img">
                                    <img src="http://via.placeholder.com/60x60" alt="">
                                </div>
                                <p title="{{ post.creatAt ? post.creatAt|date('Y-m-d H:i') : '' }}"
                                   style="text-align: right; line-height: 2;">
                                        {% include 'FrontInterface/comment/FormaDateTime.html.twig' with {'value' : post.creatAt } %}
                                </p>
                                <div class="usr_quest">

                                    <h3 style="line-height: 1.4;">{{ post.title }}</h3>
                                    {{ post.description | raw }}
                                    <ul class="react-links">
                                        <li><a href="{{ path('clickLikes', {'id': post.id}) }}" title="">‚ù§Ô∏è Likes</span>
                                                {% if post.likes is null %}
                                                    0
                                                {% else %}
                                                    {{ post.likes }}
                                                {% endif %}
                                            </a></li>
                                        <li><a title="View"> üëÅÔ∏è Views
                                                {% if post.views is null %}
                                                    0
                                                {% else %}
                                                    {{ post.views }}
                                                {% endif %}</a></li>
                                    </ul>


                                    <ul class="quest-tags">
                                        {% for tag in tags %}
                                            {% if post.frm.id == tag.tagPost.get('id') %}
                                                <li><a href="#" title="{{ tag.description }}">{{ tag.title }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                    <div class="comment-section">
                                        <h3>{{ post.comments | length }} Comments</h3>
                                        <div class="comment-sec">
                                            <ul>

                                                {% for comment in comments %}
                                                    {% if comment.pst.id == post.id %}

                                                        <li>
                                                            <div class="comment-list">
                                                                <div class="bg-img">
                                                                    <img src="http://via.placeholder.com/40x40" alt="">
                                                                </div>
                                                                <div class="comment">
                                                                    <h3>{{ comment.usr.username }}</h3>
                                                                    <div>{{ comment.content|raw }}</div>
                                                                    <br>
                                                                    {% include 'FrontInterface/post/rating.html.twig' with {'rating':comment.rating} %}

                                                                    <span style="margin-left: 470px">{% include 'FrontInterface/comment/FormaDateTime.html.twig' with {'value' : comment.creatAt } %}</span>
                                                                    {% if comment.usr == user %}
                                                                        <div style="width: 100%; display:flex; justify-content: flex-end">
                                                                            <a href="{{ path('comment_edit_front', {'id': comment.id}) }}">
                                                                                <button type="button"
                                                                                        class="btn-sm shadow-sm btn btn-primary mt-2 mb-2 mr-2">
                                                                                    Edit
                                                                                </button>
                                                                            </a>
                                                                            {{ include('FrontInterface/comment/_delete_form.html.twig') }}
                                                                        </div>
                                                                    {% endif %}
                                                                </div>
                                                            </div><!--comment-list end-->
                                                        </li>
                                                    {% endif %}
                                                {% endfor %}

                                            </ul>
                                        </div><!--comment-sec end-->
                                    </div>
                                </div><!--usr_quest end-->
                            </div><!--usr-question end-->
                        </div><!--forum-post-view end-->

                        <div class="post-comment-box" style="border-radius: 5px;">
                            <div class="user-poster">
                                <p>Comment as <a>{{ user.username }}</a></p>
                                <div class="post_comment_sec">
                                    {{ include('FrontInterface/comment/_form.html.twig') }}
                                </div><!--post_comment_sec end-->
                            </div><!--user-poster end-->
                        </div><!--post-comment-box end-->

                    </div>

                    <div class="col-lg-4" style="border-radius: 5px; position: sticky; right: 0;">
                        <div class="widget widget-user" style="border-radius: 5px;">
                            <h3 class="title-wd"style="font-size: 15px">{{ post.title }}</h3>
                            <ul>
                                <li>
                                    <div class="usr-msg-details">
                                        <div class="usr-mg-info">
                                            <h3 style="color: #6a737c; font-size: 14px;">Created At : {{post.creatAt ? post.creatAt|date('Y-m-d') : ''}} <i class="far fa-clock"></i></h3>
                                            <h3 style="color: #6a737c; font-size: 14px;">Commments : {{ post.comments |length }} <i class="far fa-comment"></i></h3>
                                            <h3 style="color: #6a737c; font-size: 14px;">Views : {{ post.views }} <i class="far fa-eye"></i></h3>
                                            <h3 style="color: #6a737c; font-size: 14px;">Likes : {{ post.likes }} <i class="far fa-thumbs-up"></i></h3>
                                        </div><!--usr-mg-info end-->
                                    </div>
                                </li>
                            </ul>
                        </div><!--widget-user end-->

                        <div class="widget widget-adver">
                            <img src="http://via.placeholder.com/370x270" alt="">
                        </div><!--widget-adver end-->
                        <div id="sticky">
                            <div class="widget widget-user" style="background-color: #11a85236;  border-radius: 6px;">
                                <footer style="border-radius: 5px;">
                                    <div class="footy-sec  no-margin">
                                        <div class="container">
                                            <ul>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Help Center</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Privacy Policy</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Community Guidelines</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Cookies Policy</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Career</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Forum</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Language</a></li>
                                                <li><a style="color: #6a737c; font-size: 12px; line-height: 0;" href="#"
                                                       title="">Copyright Policy</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </footer><!--footer end-->
                            </div>
                            <button style=" width: 128px; font-family: Noto Sans,Arial,sans-serif; border-radius: 15px; text-align:center; margin-left: 35%; position: relative;"
                                    class="btn btn-success d-none d-sm-inline-block btn-sm btn-primary shadow-sm mt-2 mb-2"
                                    onclick="topFunction()" id="myBtn" title="Go to top">Back to Top
                            </button>
                        </div>
                    </div>
                </div>
            </div><!--forum-questions-sec end-->
        </div>
    </section><!--forum-page end-->
    <script>
        /*
          ======================================
                    BACK TO TOP LINK
        ======================================
        */

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("myBtn").style.display = "block";
            } else {
                document.getElementById("myBtn").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    <script>
        window.onscroll = function () {
            myFunction()
        };

        var header = document.getElementById("sticky");
        var sticky = header.offsetTop + 580;

        function myFunction() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }
    </script>

