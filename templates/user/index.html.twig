{% extends 'baseAdmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
<div class="content-wrapper">
    <h1>User table</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Nom campany</th>
                <th>Role</th>
                <th>CreatedAt</th>
                <th>Enabled</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nomEntreprise }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>

                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="24">no records Users found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-info" href="{{ path('user_new') }}">Create new client</a>
        <a class="btn btn-info" href="{{ path('user_new_company') }}">Create new company</a>
        <a class="btn btn-info" href="{{ path('user_new_Freelancer') }}">Create new freelancer</a>
    </div>

</div>
{% endblock %}
